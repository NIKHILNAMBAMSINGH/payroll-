<%@ Master Language="C#" MasterPageFile="~/Master.master" AutoEventWireup="true" CodeFile="adminMaster.master.cs" Inherits="adminMaster" %>

<asp:Content ID="Content1" ContentPlaceHolderID="head" Runat="Server">
    <style type="text/css">
        .auto-style1 {
            width: 2014px; /* Set the width to 2014px */
            height: 740px; /* Set the height to 740px */
            margin: 0 auto; /* Center the table horizontally */
            position: relative;
        }
        .menu-bar {
            text-align: center;
            margin-top: 20px;
        }
        .auto-style1 table {
            border-collapse: collapse;
            border: 2px solid black;
            height: 630px; /* Adjusted height */
            width: 100%; /* Adjusted to 100% */
        }
        .menu-item {
            display: inline-block;
            margin: 0 2%; /* Adjust spacing between menu items */
        }
        .menu-item a {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s;
        }
        .menu-item a:hover {
            background-color: #0056b3;
        }
        td {
            padding-top: 20px;
            padding-bottom: 20px;
            padding-right:10px;
        }
        .auto-style3 {
            height: 51px;
            width: 163px;
        }
        .auto-style4 {
            width: 208px;
              right: 0;
            top: 100px;
            bottom: 0;
            border: 5px solid black;
            width: calc(100% - 208px);
        }
        #bodytd {
            right: 0;
            top: 100px;
            bottom: 0;
            border: 5px solid black;
            width: calc(100% - 208px);
        }
        .auto-style6 {
            width: 73px;
            height: 394px;
        }
        .auto-style7 {
            height: 394px;
        }
    </style>
</asp:Content>

<asp:Content ID="Content2" ContentPlaceHolderID="ContentPlaceHolder1" Runat="Server">
    <div class="menu-bar">
    </div>
    <table class="auto-style1">
        <tr>
            <td class="auto-style6" style="vertical-align:top">
                <table class="auto-style1">
                    <tr>
                        <td class="auto-style4">
                            <div class="menu-item">
                                <asp:HyperLink ID="DepartmentsLink" runat="server" NavigateUrl="~/adminDepartment.aspx">Departments</asp:HyperLink>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="auto-style4">
                            <div class="menu-item">
                                <asp:HyperLink ID="EmployeesLink" runat="server" NavigateUrl="~/adminEmployee.aspx">Employees</asp:HyperLink>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="auto-style4">
                            <div class="menu-item">
                                <asp:HyperLink ID="LeaveLink" runat="server" NavigateUrl="~/Leave.aspx">Leave</asp:HyperLink>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="auto-style4">
                            <div class="menu-item">
                                <asp:HyperLink ID="AttendanceLink" runat="server" NavigateUrl="~/Attendance.aspx">Attendance</asp:HyperLink>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="auto-style4">
                            <div class="menu-item">
                                <asp:HyperLink ID="SalaryLink" runat="server" NavigateUrl="~/Salary.aspx">Salary</asp:HyperLink>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td class="auto-style4">
                            <div class="menu-item">
                                <asp:HyperLink ID="LogoutLink" runat="server" NavigateUrl="~/adminOrEmployee.aspx">Logout</asp:HyperLink>
                            </div>
                        </td>
                    </tr>
                </table>
            </td>
            <td id="bodytd" style="vertical-align:top" class="auto-style7">
                <asp:ContentPlaceHolder ID="ContentPlaceHolder2" runat="server">
                </asp:ContentPlaceHolder>
            </td>
        </tr>
    </table>
</asp:Content>
